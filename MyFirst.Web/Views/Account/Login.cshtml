@model MyFirst.Web.Models.ViewModels.Login
@{
}

<div class="containeratio mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mt-3 mb-3 h3">
                Login
            </h1>

            <form method="post">

                <div class="mb-3">
                    <label class="form-label">
                        Username
                        <input type="text" id="username" class="form-control" asp-for="Username" />
                    </label>
                </div>

                <div class="mb-3">
                    <label class="form-label">
                        Password
                        <input type="password" id="password" class="form-control" asp-for="Password" />
                    </label>
                </div>
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="mb-3">
                    <button type="submit" class="btn btn-dark"> Login </button>
                </div>

            </form>
        </div>
    </div>
</div>